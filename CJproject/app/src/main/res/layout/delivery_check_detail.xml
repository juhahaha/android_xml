<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <View
        android:id="@+id/countour_line2"
        android:layout_width="411dp"
        android:layout_height="8dp"
        android:layout_marginTop="350dp"
        android:background="@drawable/contour_line" />

    <TextView
        android:id="@+id/top_delivery"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/header"
        android:gravity="center"
        android:text="배송완료"
        android:textColor="@android:color/black"
        android:textSize="17dp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/ic_glass"
        android:layout_width="19dp"
        android:layout_height="19dp"
        android:layout_marginLeft="325dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/ic_glass" />

    <Button
        android:id="@+id/ic_scan"
        android:layout_width="19dp"
        android:layout_height="19dp"
        android:layout_marginLeft="355dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/ic_scan" />

    <TextView
        android:id="@+id/수취방법"
        android:layout_width="54dp"
        android:layout_height="19dp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="70dp"
        android:gravity="center_horizontal|top"
        android:text="수취방법"
        android:textAppearance="@style/수취방법"
        android:textStyle="bold" />

    <Button
        android:id="@+id/문앞"
        android:layout_width="60dp"
        android:layout_height="32dp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="100dp"
        android:background="@drawable/button_back"
        android:text="문앞"
        android:textAppearance="@style/문앞"
        tools:ignore="TouchTargetSizeCheck" />

    <Button
        android:id="@+id/직접수령"
        android:layout_width="60dp"
        android:layout_height="32dp"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="100dp"
        android:background="@drawable/button_back"
        android:text="직접수령"
        android:textAppearance="@style/문앞" />

    <Button
        android:id="@+id/경비실"
        android:layout_width="60dp"
        android:layout_height="32dp"
        android:layout_marginLeft="160dp"
        android:layout_marginTop="100dp"
        android:background="@drawable/button_back"
        android:text="경비실"
        android:textAppearance="@style/문앞" />

    <Button
        android:id="@+id/무인택배함"
        android:layout_width="60dp"
        android:layout_height="32dp"
        android:layout_marginLeft="240dp"
        android:layout_marginTop="100dp"
        android:background="@drawable/button_back"
        android:text="무인택배함"
        android:textAppearance="@style/문앞" />

    <Button
        android:id="@+id/기타"
        android:layout_width="60dp"
        android:layout_height="32dp"
        android:layout_marginLeft="320dp"
        android:layout_marginTop="100dp"
        android:background="@drawable/button_back"
        android:text="기타"
        android:textAppearance="@style/문앞" />

    <View
        android:id="@+id/countour_line"
        android:layout_width="411dp"
        android:layout_height="8dp"
        android:layout_marginTop="150dp"
        android:background="@drawable/contour_line" />

    <TextView
        android:id="@+id/특이사항"
        android:layout_width="54dp"
        android:layout_height="19dp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="180dp"
        android:lineSpacingExtra="2sp"
        android:text="특이사항"
        android:textAppearance="@style/수취방법"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/사진촬영"
        android:layout_width="54dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="390dp"
        android:lineSpacingExtra="2sp"
        android:text="사진촬영"
        android:textAppearance="@style/수취방법"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/특이사항_input"
        android:layout_width="360dp"
        android:layout_height="100dp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="220dp"
        android:layout_weight="1"
        android:background="#eeeeee"
        android:hint="특이사항을 입력하세요."
        android:padding="16dp"
        android:textAppearance="@style/수취방법" />

    <Button
        android:id="@+id/배송완료_완료버튼"
        android:layout_width="361dp"
        android:layout_height="47dp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="600dp"
        android:background="@drawable/btn"
        android:text="배송완료 및 문자발송"
        android:textAppearance="@style/btn" />

    <Button
        android:id="@+id/ic_picture"
        android:layout_width="19dp"
        android:layout_height="19dp"
        android:layout_marginLeft="325dp"
        android:layout_marginTop="390dp"
        android:background="@drawable/ic_picture" />

    <Button
        android:id="@+id/camerabutton"
        android:layout_width="19dp"
        android:layout_height="19dp"
        android:layout_marginLeft="350dp"
        android:layout_marginTop="390dp"
        android:background="@drawable/ic_camera" />

</FrameLayout>
